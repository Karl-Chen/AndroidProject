<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_orderno"
        android:text="訂單號碼："
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_shippingdate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_orderdate"
        android:text="下訂日期："
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_orderno"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_shippingdate"
        android:text="出貨日期："
        app:layout_constraintTop_toBottomOf="@id/text_orderdate"
        app:layout_constraintLeft_toRightOf="@id/text_orderno"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_addr"
        android:text="收貨地址："
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_orderdate"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_status"
        android:text="訂單狀態："
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/text_addr"
        app:layout_constraintLeft_toRightOf="@id/text_shippingdate"/>

</androidx.constraintlayout.widget.ConstraintLayout>