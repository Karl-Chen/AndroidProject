<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_order_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_send_way"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_detail_send_way"
        android:text="取貨方式"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_send_addr"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_detail_send_way"
        android:text="自取"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_send_addr"
        app:layout_constraintLeft_toRightOf="@id/text_title_detail_send_way"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_detail_send_addr"
        android:text="取貨門市"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_fix"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/text_detail_send_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:text="長勝門市"
        app:layout_constraintLeft_toRightOf="@id/text_title_detail_send_addr"
        app:layout_constraintTop_toBottomOf="@id/text_title_detail_send_way" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_detail_fix"
        android:text="加固包裝"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_get_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <CheckBox
        android:id="@+id/checkBox_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="八角加固"
        android:textSize="18sp"
        android:enabled="false"
        app:layout_constraintLeft_toRightOf="@id/text_title_detail_fix"
        app:layout_constraintBaseline_toBaselineOf="@id/text_title_detail_fix"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_detail_get_name"
        android:text="取貨人"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_get_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/text_detail_get_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="常春子"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/text_title_detail_send_addr"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_get_phone" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_detail_get_phone"
        android:text="取貨人電話"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_order_status"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/text_detail_get_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0912345678"
        android:textSize="18sp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@id/text_title_detail_get_phone"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_order_status"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_detail_order_status"
        android:text="訂單狀態"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_send_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/text_detail_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="18sp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@id/text_title_detail_order_status"
        app:layout_constraintBottom_toTopOf="@id/text_title_detail_send_date"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_detail_send_date"
        android:text="出貨日期"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/text_detail_totalprice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/text_detail_send_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----/--/--"
        android:textSize="18sp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@id/text_title_detail_send_date"
        app:layout_constraintBottom_toTopOf="@id/text_detail_totalprice"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_detail_totalprice"
        android:text="商品總價："
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/btn_detail_order"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_detail_send_price"
        android:text="運費："
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/btn_detail_order"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_detail_order"
        android:text="取消訂單"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>