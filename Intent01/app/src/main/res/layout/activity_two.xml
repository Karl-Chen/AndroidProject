<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_two">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~=這是^第二個^畫面=~"
        android:id="@+id/textView_two"
        android:textSize="24sp"
        android:textColor="#FF4456"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.35"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_close_activiy_two"
        android:text="關閉第二個Activity"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@id/textView_two"
        app:layout_constraintTop_toBottomOf="@id/textView_two"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_activiy_three"
        android:text="啟動第三個Activity"
        app:layout_constraintLeft_toLeftOf="@id/button_close_activiy_two"
        app:layout_constraintTop_toBottomOf="@id/button_close_activiy_two"/>

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_02"
        android:visibility="visible"/>



</androidx.constraintlayout.widget.ConstraintLayout>