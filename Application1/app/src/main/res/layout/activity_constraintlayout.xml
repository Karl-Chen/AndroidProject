<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel_01"
        android:text="取消"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_next_01"
        android:text="下一步"
        app:layout_constraintLeft_toRightOf="@+id/btn_cancel_01"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back_01"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancel_01"
        app:layout_constraintLeft_toRightOf="@id/btn_left_10"
        android:text="上一步"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_left_10"
        android:text="左上"
        app:layout_constraintBottom_toTopOf="@id/btn_cancel_01"
        app:layout_constraintEnd_toStartOf="@id/btn_next_01"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_right_up01"
        android:text="右上"
        app:layout_constraintBottom_toTopOf="@id/btn_next_01"
        app:layout_constraintLeft_toRightOf="@id/btn_next_01"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_center_01"
        android:text="置中按鈕"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_centerup_030"
        android:text="中上30%"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.9"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_center_leftup020"
        android:text="左上20%"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_center_rightdown075"
        android:text="右下75%"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.75"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidline_h_01"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidline_v_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="310dp" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidline_h_02"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="10dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidline_v_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96875" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn9"
        android:text="點我按我"
        app:layout_constraintBottom_toTopOf="@id/guidline_h_02"
        app:layout_constraintRight_toLeftOf="@id/guidline_v_02"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_1"
        android:text="帳號:"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/guidline_h_01"
        app:layout_constraintLeft_toLeftOf="@id/guidline_v_01"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit3"
        android:text=""
        android:hint="請輸入帳號"
        android:textSize="16sp"
        android:ems="14"
        app:layout_constraintBaseline_toBaselineOf="@id/text_1"
        app:layout_constraintLeft_toRightOf="@id/text_1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_pwd"
        android:text="密碼:"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/guidline_v_01"
        app:layout_constraintTop_toBottomOf="@id/text_1"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit4"
        android:textSize="16dp"
        android:ems="14"
        android:hint="請輸入密碼"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/textview_pwd"
        app:layout_constraintBaseline_toBaselineOf="@id/textview_pwd"
        />


</androidx.constraintlayout.widget.ConstraintLayout>