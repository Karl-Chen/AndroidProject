<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="#84DC84"
        android:text="顯示文字練習" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview練習2"
        android:textColor="#E61313"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#45FB38"
        android:text="第三組文字練習"
        android:textAlignment="center"
        android:textColor="#1063FA"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#AA8812"
        android:gravity="bottom|right"
        android:text="第四組TextView練習" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#AA00EE"
        android:text="外部位置設定\n11111" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="#FFDDAA"
            android:text="一" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="#FF00AA"
            android:text="二" />
    </LinearLayout>
</LinearLayout>