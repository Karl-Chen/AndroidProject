<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_q_01"
        android:text="1:你最常上下面哪個網站？"
        android:textSize="18sp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_01"
        app:layout_constraintLeft_toLeftOf="@id/textview_q_01"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/textview_q_01">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_01"
            android:text="www.google.com.tw"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_02"
            android:text="www.yahoo.com.tw"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_03"
            android:text="www.msn.com"/>

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_q_02"
        app:layout_constraintTop_toBottomOf="@id/radioGroup_01"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"
        android:text="2.你最常做的休閒活動是什麼？"
        android:textSize="18sp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_02"
        app:layout_constraintTop_toBottomOf="@id/textView_q_02"
        app:layout_constraintLeft_toLeftOf="@id/textView_q_02"
        android:layout_margin="5dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_04"
            android:text="逛街"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_05"
            android:text="看電影"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_06"
            android:text="騎自行車"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_answer1"
        app:layout_constraintTop_toBottomOf="@id/radioGroup_02"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:text=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_answer2"
        app:layout_constraintTop_toBottomOf="@id/textview_answer1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text=""
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>