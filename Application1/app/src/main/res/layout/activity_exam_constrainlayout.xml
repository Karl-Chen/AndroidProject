<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_title"
        android:text="高屏澎東分署登入畫面"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="24sp"/>
    <ImageView
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:id="@+id/image1"
        android:src="@drawable/strikefreedom"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/text_acc"
        android:text="帳號："
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="請輸入帳號"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintLeft_toRightOf="@id/text_acc"
        app:layout_constraintBaseline_toBaselineOf="@id/text_acc"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/text_pwd"
        android:text="密碼："
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_acc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="請輸入密碼"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_pwd"
        app:layout_constraintTop_toBottomOf="@id/text_acc"
        app:layout_constraintLeft_toRightOf="@id/text_pwd"
        app:layout_constraintBaseline_toBaselineOf="@id/text_pwd"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/edit_pwd"
        android:id="@+id/radiogroup_type"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="學生"
            android:textSize="18sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教師"
            android:textSize="18sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="職工"
            android:textSize="18sp"/>
    </RadioGroup>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="390dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="65dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:text="登入"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/guide_h"
        app:layout_constraintLeft_toRightOf="@id/guide_v"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reg"
        android:text="註冊"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/guide_h"
        app:layout_constraintLeft_toRightOf="@id/btn_login" />





</androidx.constraintlayout.widget.ConstraintLayout>