<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="5dp"/>
<!--            solid是固定色-->
<!--            <solid android:color="#6677FF"/>-->
<!--            gradient是漸層-->
            <gradient android:startColor="#00FFBB"
                android:centerColor="#FFBB00"
                android:endColor="#BB00FF"
                android:angle="45"/>
<!--            stroke是框線-->
<!--            dash是虛線-->
            <stroke android:color="#000000"
                android:width="2dp"
                android:dashGap="2dp"
                android:dashWidth="2dp"
                />
            <padding android:left="5dp"
                android:right="10dp"
                android:top="15dp"
                android:bottom="20dp"
                />
        </shape>
    </item>
</selector>