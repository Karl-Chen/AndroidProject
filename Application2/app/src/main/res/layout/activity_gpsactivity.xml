<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPSActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_gps_info"
        android:text="GPS資訊："
        android:textSize="16sp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_set_gps"
        android:text="設定GPS"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_gps_info"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_start_gps"
        android:text="啟用GPS更新"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_gps_info"
        app:layout_constraintLeft_toRightOf="@id/btn_set_gps" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_show_map"
        android:text="啟動地圖"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_gps_info"
        app:layout_constraintLeft_toRightOf="@id/btn_start_gps" />

</androidx.constraintlayout.widget.ConstraintLayout>