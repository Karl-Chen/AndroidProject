<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Title"
        android:text="高屏澎東分署登入畫面"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:id="@+id/image"
        android:src="@drawable/strikefreedom"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView_Title"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_acc"
        android:text="帳號："
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/image"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="請輸入帳號"
        android:textSize="18sp"
        android:layout_below="@id/image"
        android:layout_toRightOf="@id/text_acc"
        android:layout_alignBaseline="@id/text_acc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_pwd"
        android:text="密碼："
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text_acc"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="請輸入密碼"
        android:id="@+id/edit_pwd"
        android:textSize="18sp"
        android:layout_below="@id/text_acc"
        android:layout_toRightOf="@id/text_pwd"
        android:layout_alignBaseline="@id/text_pwd"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/edit_pwd"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="學生"
            android:textSize="18sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教師"
            android:textSize="18sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="職工"
            android:textSize="18sp"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:text="登入"
        android:textSize="18dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="65dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reg"
        android:text="註冊"
        android:textSize="18dp"
        android:layout_marginTop="390dp"
        android:layout_toRightOf="@id/btn_login"/>
</RelativeLayout>